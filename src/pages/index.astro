---
import { getCollection } from "astro:content";
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import { sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getCollection("post", ({ data }) => !data.draft);
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const now: Array<{ title: string; desc: string; href: string }> = [
	{
		title: "Reading",
		desc: "'The First Law' trilogy — Joe Abercrombie",
		href: "https://www.goodreads.com/en/book/show/11706669",
	},
	{
		title: "Listening to",
		desc: "'People I (Mostly) Admire' podcast — Steve Levitt",
		href: "https://open.spotify.com/show/4tINcXckbPUk6dsK3eQD21?si=db9a67d31d204be8",
	},
	{
		title: "Working on",
		desc: "This site!",
		href: "https://github.com/jacklorusso/astro-site",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">
			Jack Lo Russo is a software engineer and designer from
			Sydney,&nbsp;Australia.
		</h1>
		<p class="mb-4">
			For a lot of my career, I've been focused on building, maintaining and
			scaling design systems. I am currently working on the <a
				href="https://atlassian.design">Atlassian Design System</a
			>. Outside of tech, I'm passionate about education and the arts, and I'm a
			huge Sydney and Seattle sports&nbsp;fan&nbsp;⚾️
		</p>
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	<section class="mt-16">
		<h2 class="title mb-4 text-xl">Now</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				now.map(({ href, title, desc }) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<p class="min-w-[120px] text-gray-500">{title}:</p>
						<a
							href={href}
							target="_blank"
							rel="noopener noreferrer"
							class="underline"
						>
							{desc}
						</a>
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
