---
import ThemeToggle from "../ThemeToggle.astro";
import Search from "../Search.astro";
import { MENU_LINKS } from "@/data/constants";
const url = new URL(Astro.request.url);
---

<script>
  import { toggleClass } from "@/utils";

  document.addEventListener("DOMContentLoaded", () => {
    const header = document.getElementById("main-header") as HTMLElement;
    const toggleMenuButton = document.getElementById(
      "toggle-navigation-menu",
    ) as HTMLButtonElement;
    let menuOpen = false;

    toggleMenuButton.addEventListener("click", () => {
      toggleClass(header, "menu-open");
      menuOpen = !menuOpen;
      toggleMenuButton.setAttribute("aria-expanded", menuOpen.toString());
    });
  });
</script>

<header id="main-header" class="group relative mb-28 flex items-center">
  <div class="flex">
    <a
      class="flex items-center no-underline"
      href="/"
      aria-current={url.pathname === "/" ? "page" : false}
    >
      <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 506 331">
        <title>Go to the home page</title>
        <g fill="none" fill-rule="evenodd">
          <circle cx="165.5" cy="165.5" r="165.5" fill="#EF3085"></circle>
          <circle cx="340.5" cy="165.5" r="165.5" fill="#34B6DD"></circle>
          <path
            fill="#42458A"
            d="M253,25.2187885 C299.847155,54.5054142 331,106.481298 331,165.718784 C331,224.95627 299.847155,276.932153 253,306.218779 C206.152852,276.932164 175,224.956276 175,165.718784 C175,106.481291 206.152852,54.5054029 253.000015,25.2187789 Z"
          ></path>
        </g>
      </svg>
    </a>
    <nav
      id="navigation-menu"
      class="absolute -inset-x-4 top-14 hidden flex-col items-end gap-y-4 rounded-md bg-[--theme-menu-bg] py-4 text-xl shadow backdrop-blur group-[.menu-open]:z-50 group-[.menu-open]:flex sm:static sm:z-auto sm:ml-4 sm:mt-1 sm:flex sm:flex-row sm:items-center sm:items-baseline sm:bg-transparent sm:py-0 sm:text-base sm:text-inherit sm:shadow-none sm:backdrop-blur-none"
      aria-label="Main menu"
    >
      <a
        href="/"
        class="px-8 py-4 leading-none no-underline hover:underline sm:sr-only sm:py-0"
        aria-current={url.pathname === "/" ? "page" : false}
        rel="prefetch"
      >
        Home
      </a>

      {
        MENU_LINKS.map((link) => (
          <a
            href={link.path}
            class="px-8 py-4 leading-none no-underline hover:underline sm:py-0 sm:px-4"
            aria-current={url.pathname === link.path ? "page" : false}
            rel="prefetch"
          >
            {link.title}
          </a>
        ))
      }
    </nav>
  </div>
  <Search />
  <ThemeToggle />
  <button
    id="toggle-navigation-menu"
    class="group relative ms-2 h-9 w-9 rounded-md p-2 ring-zinc-400 transition-all hover:ring-2 sm:invisible sm:ms-4 sm:hidden"
    type="button"
    aria-label="Open main menu"
    aria-expanded="false"
    aria-haspopup="menu"
  >
    <svg
      id="line-svg"
      class="absolute start-1/2 top-1/2 h-7 w-7 -translate-x-1/2 -translate-y-1/2 transition-all group-aria-expanded:scale-0 group-aria-expanded:opacity-0"
      aria-hidden="true"
      focusable="false"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M3.75 9h16.5m-16.5 6.75h16.5"></path>
    </svg>
    <svg
      id="cross-svg"
      class="absolute start-1/2 top-1/2 h-7 w-7 -translate-x-1/2 -translate-y-1/2 scale-0 text-accent opacity-0 transition-all group-aria-expanded:scale-100 group-aria-expanded:opacity-100"
      class="text-accent"
      aria-hidden="true"
      focusable="false"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>
</header>
